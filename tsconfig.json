{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src", // The base directory for resolving non-relative module names
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./src", // Sets the base directory to the `src` folder
    "paths": {
      "@expenseCalculator/*": ["*"] // Mapping for the absolute imports
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
